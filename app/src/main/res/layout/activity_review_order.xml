<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvHeadingHeader"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="@dimen/_04"
        app:cardElevation="4dp"
        app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBackbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_15"
            android:gravity="left|center"
            android:onClick="ivBackbtn"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20"
            android:gravity="left|center"
            android:text="Review Order"
            android:textSize="@dimen/_15"
            android:textStyle="bold" />


    </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginBottom="@dimen/_10">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10"
            android:text="Your Cloth"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10"
            android:gravity="right"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:textColor="@color/default_green"
            android:text="Edit"/>

        </FrameLayout>




    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvReviewOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add More"
        android:textStyle="bold"
        android:textColor="@color/default_green"
        android:layout_marginLeft="@dimen/_10"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginBottom="@dimen/_20"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_50">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_10"
                    android:paddingBottom="@dimen/_10"
                    android:layout_marginBottom="@dimen/_10"
                    android:background="@color/white">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/promocode_32"
                        android:layout_marginLeft="@dimen/_10"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Have Promocode ? "
                        android:textColor="@color/default_green"
                        android:layout_marginLeft="@dimen/_20"/>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sub Total"
                            android:textColor="@color/tab_icon_color_unselect"
                            android:layout_marginLeft="@dimen/_10"
                            android:layout_marginTop="@dimen/_10"
                            android:layout_marginBottom="@dimen/_10"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20 BD"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:layout_marginRight="@dimen/_20"
                            android:layout_marginLeft="@dimen/_10"
                            android:layout_marginTop="@dimen/_10"
                            android:layout_marginBottom="@dimen/_10"/>
                        
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tax"
                            android:textColor="@color/tab_icon_color_unselect"
                            android:layout_marginLeft="@dimen/_10"
                            android:layout_marginTop="@dimen/_10"
                            android:layout_marginBottom="@dimen/_10"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5 BD"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:layout_marginRight="@dimen/_20"
                            android:layout_marginLeft="@dimen/_10"
                            android:layout_marginTop="@dimen/_10"
                            android:layout_marginBottom="@dimen/_10"/>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payable Amount"
                            android:textStyle="bold"
                            android:textColor="@color/default_green"
                            android:layout_marginLeft="@dimen/_10"
                            android:layout_marginTop="@dimen/_10"
                            android:layout_marginBottom="@dimen/_10"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="25 BD"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:textColor="@color/default_green"
                            android:layout_marginRight="@dimen/_20"
                            android:layout_marginLeft="@dimen/_10"
                            android:layout_marginTop="@dimen/_10"
                            android:layout_marginBottom="@dimen/_10"/>



                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llContBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50"
            android:layout_gravity="bottom"
            android:background="@color/text_color_hl"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Confirm Order"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/_20"
                    android:textSize="@dimen/_20" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    android:src="@drawable/right_arrow"
                    android:layout_marginRight="@dimen/_10"/>





            </LinearLayout>


        </LinearLayout>



    </FrameLayout>


</LinearLayout>