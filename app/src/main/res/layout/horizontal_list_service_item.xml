<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_120"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10"
    android:background="@color/white"
    android:orientation="horizontal"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivHzList"
            android:layout_width="@dimen/_80"
            android:layout_height="@dimen/_80"
            android:scaleType="centerCrop"
            android:src="@drawable/dry_clean_icon" />

        <TextView
            android:id="@+id/tvHzHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Heading"
            android:textSize="@dimen/_15"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvHzSubHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10"
            android:text="SubHeading"
            android:textSize="@dimen/_10"
            android:textColor="@color/landing_sub_heading"/>
    </LinearLayout>
</android.support.v7.widget.CardView>