<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cvHeadingHeader"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="@dimen/_04"
        app:cardElevation="4dp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBackbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15"
                android:onClick="ivBackbtn"
                android:gravity="left|center"
                android:src="@drawable/arrow_left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20"
                android:gravity="left|center"
                android:text="Rate Order"
                android:textSize="@dimen/_15"
                android:textStyle="bold" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/white">

        <com.voyager.laundry.costom.CircleImageView
            android:id="@+id/civProfile"
            android:layout_width="@dimen/_90"
            android:layout_height="@dimen/_90"
            android:layout_margin="@dimen/_20"
            android:src="@drawable/progress5__1_" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_27"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_120"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Hey Sam,               Your order has been Delivered Successfully"
                android:textColor="@color/black"
                android:textSize="@dimen/_12" />



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Rate your last order experience"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_27"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_full_active"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_full_active"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_full_active"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_half_active"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_outline"/>


            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40"
                android:textSize="@dimen/_12"
                android:gravity="center"
                android:hint="Share your experience in words"
                android:layout_marginBottom="@dimen/_24"
                android:layout_marginLeft="@dimen/_16"
                android:layout_marginRight="@dimen/_16"/>



            <Button
                android:id="@+id/btnSignIn"
                android:text="Submit Review"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_15"
                android:layout_marginRight="@dimen/_15"
                android:textSize="@dimen/_12"
                android:layout_gravity="bottom"
                android:background="@drawable/rectangle_button"
                android:layout_marginTop="@dimen/_10"
                android:onClick="btnSubmit"
                android:textAllCaps="false" />
        </LinearLayout>


    </LinearLayout>






</LinearLayout>